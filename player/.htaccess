# ================================================
# Конфигурация Apache для PHP Video Player v3.0
# ================================================

# ---------------------------
# Включение модулей Apache
# ---------------------------
<IfModule mod_headers.c>
    # CORS заголовки для работы с внешними источниками
    Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Methods "GET, POST, OPTIONS"
    Header set Access-Control-Allow-Headers "Content-Type, Authorization"
    
    # Cross-Origin заголовки для SharedArrayBuffer (требуется для FFmpeg.wasm)
    Header set Cross-Origin-Opener-Policy "same-origin"
    Header set Cross-Origin-Embedder-Policy "require-corp"
    
    # Кэширование статических файлов
    <FilesMatch "\.(css|js|jpg|jpeg|png|gif|ico|svg|woff|woff2|ttf|eot)$">
        Header set Cache-Control "max-age=31536000, public"
    </FilesMatch>
    
    # Видео файлы - умеренное кэширование
    <FilesMatch "\.(mp4|webm|m3u8|ts|mpd)$">
        Header set Cache-Control "max-age=3600, public"
    </FilesMatch>
    
    # WASM файлы - долгое кэширование
    <FilesMatch "\.wasm$">
        Header set Cache-Control "max-age=31536000, public"
        Header set Content-Type "application/wasm"
    </FilesMatch>
</IfModule>

# ---------------------------
# Сжатие контента (GZIP)
# ---------------------------
<IfModule mod_deflate.c>
    # Сжимать текстовые файлы
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript
    AddOutputFilterByType DEFLATE application/javascript application/json application/xml
    AddOutputFilterByType DEFLATE application/x-javascript application/xhtml+xml
    
    # НЕ сжимать бинарные файлы
    SetEnvIfNoCase Request_URI \.(?:gif|jpe?g|png|mp4|webm|wasm)$ no-gzip dont-vary
</IfModule>

# ---------------------------
# Типы MIME
# ---------------------------
<IfModule mod_mime.c>
    # Видео форматы
    AddType video/mp4 .mp4
    AddType video/webm .webm
    AddType application/x-mpegURL .m3u8
    AddType video/MP2T .ts
    AddType application/dash+xml .mpd
    
    # Шрифты
    AddType font/woff .woff
    AddType font/woff2 .woff2
    AddType application/font-ttf .ttf
    AddType application/font-otf .otf
    
    # JavaScript и WASM
    AddType application/javascript .js
    AddType application/wasm .wasm
    AddType application/json .json
</IfModule>

# ---------------------------
# mod_rewrite правила
# ---------------------------
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Перенаправление на index.php если файл не существует
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ index.php [QSA,L]
</IfModule>

# ---------------------------
# Безопасность
# ---------------------------
# Запретить доступ к .ht файлам
<FilesMatch "^\.ht">
    Require all denied
</FilesMatch>

# Запретить листинг директорий
Options -Indexes

# Защита от XSS
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
</IfModule>

# ---------------------------
# PHP настройки
# ---------------------------
<IfModule mod_php.c>
    # Увеличение лимитов для обработки больших видео файлов
    php_value upload_max_filesize 2048M
    php_value post_max_size 2048M
    php_value memory_limit 512M
    php_value max_execution_time 300
    php_value max_input_time 300
</IfModule>

# ---------------------------
# Кастомные страницы ошибок
# ---------------------------
ErrorDocument 404 /404.html
ErrorDocument 500 /500.html
